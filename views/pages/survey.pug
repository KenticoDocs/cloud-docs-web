extends ../includes/layout.pug
block content
    main(id='main', data-form-survey).survey&attributes(smartLink?.itemId(itemId))
      h1.survey__heading&attributes(smartLink?.elementCodename('title')) !{title}
      .survey__introduction&attributes(smartLink?.elementCodename('short_introduction'))
        | !{postprocessMarkup(introduction, res)}
      .survey__questions(data-survey=itemCodename)
        .survey__overlay