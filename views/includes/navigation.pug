- var isNotHome = req.originalUrl.replace(/\?.*$/, '') !== '/'
.print-only
    img.logo(src='/learn/img/ui/logo.png', alt='Kontent by Kentico Learning Center')
nav.navigation
    .navigation__wrapper
        .navigation__left
            .navigation__logo-wrapper
                a.navigation__logo(href='/learn/', rel='noreferrer')
                    img(src='/learn/img/ui/logo.svg', alt='Kontent by Kentico Learning Center')
            ul(class= `navigation__list${isNotHome ? '' : ' navigation__list--full'}`)
                each item in navigation
                    if (item.system.type !== 'navigation_link')
                        li.navigation__item
                            a(href=`/learn/${item.url.value}`, class=`navigation__link${req.originalUrl.startsWith(`/learn/${item.url.value}`) ? ' navigation__link--active' : ''}`) !{item.title.value}
        .navigation__right(data-search-target='')
            if isNotHome
                .navigation__search-wrapper
                    form.navigation__search(data-search-container='')
                        .navigation__search-icon(aria-hidden='true')
                        label.sr-only(for='nav-search') !{UIMessages ? UIMessages.search___placeholder.value : ''}
                        input(type='search', id='nav-search', name='nav-search', autocomplete="off", placeholder= UIMessages ? UIMessages.search___placeholder.value : '')&attributes(smartLink?.itemId(UIMessages.system.id))&attributes(smartLink?.elementCodename('search___placeholder'))
                        .autocomplete(data-search-autocomplete='')
            a.navigation__app(href=`${process.env.appUrl ? process.env.appUrl : 'https://app.kontent.ai'}`, target='_blank', rel='noreferrer')&attributes(smartLink?.itemId(UIMessages.system.id))&attributes(smartLink?.elementCodename('link_to_app_tooltip'))
                .navigation__app-tooltip !{UIMessages ? UIMessages.link_to_app_tooltip.value : ''}
        if isNotHome
            .navigation__trigger(data-search-trigger='', aria-hidden='true')
